{
    "version": 6,
    "configurePresets": [
        {
            "name": "use-clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_SCAN_FOR_MODULES": true
            }
        }
    ]
}